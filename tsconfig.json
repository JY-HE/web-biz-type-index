{
    "compilerOptions": {
        "target": "es5", // 目标 JavaScript 版本
        "module": "CommonJS", // 使用的模块系统
        "outDir": "./dist", // 输出目录
        "rootDir": "./src", // 源文件根目录
        "strict": true, // 启用所有严格类型检查选项
        "esModuleInterop": true, // 允许默认导入非 ES 模块
        "skipLibCheck": true, // 跳过库文件的类型检查
        "forceConsistentCasingInFileNames": true // 强制文件名一致性
    },
    "include": ["src/*.ts"]
}
